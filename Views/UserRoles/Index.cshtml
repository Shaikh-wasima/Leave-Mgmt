@model IEnumerable<Leave_Management.Data.UserRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
}

<h1 class="text-center display-6">Roles</h1>


<div class="container">
    <div class="d-flex justify-content-center">
        <table id="myTable" class="table table-bordered">
            <thead>
                <tr>
                    <th class="text-center">@Html.DisplayNameFor(model => model.Name)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td class="text-center">
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<p class="d-flex flex-column justify-content-around p-2 align-items-center">
    <a class="btn btn-primary align-items-center text-center w-25 mb-3" asp-action="Create">Create New</a>
    <a class="btn btn-outline-primary align-items-center text-center w-25" asp-controller="LeaveAllocations" asp-action="EmployeeRoles">Assign Roles</a>
</p>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#mytable').dataTable();
        });
    </script>
}
