@model Leave_Management.Data.UserRole

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
}

<h1 class="text-center display-6">Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4 mx-auto p-5">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input hidden asp-for="NormalizedName" class="form-control" />
            </div>
            <div class="form-group">
                <input hidden asp-for="ConcurrencyStamp" class="form-control" />
            </div>
            <input type="hidden" asp-for="Id" />
                     <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
       

    <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>


