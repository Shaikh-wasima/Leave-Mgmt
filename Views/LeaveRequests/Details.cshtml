<script>
    // Get references to the modal and its elements
    let modal = document.getElementById("myModal");
    let closeButton = document.getElementById("closeModal");
    let submitButton = document.getElementById("submitRejection");
    let rejectionInput = document.getElementById("rejectionReasonInput");

    // Function to validate rejection reason
    function validateRejection() {
        if (rejectionInput.value.trim() === "") {
            rejectionInput.classList.add("is-invalid");
            return false;
        } else {
            rejectionInput.classList.remove("is-invalid");
            return true;
        }
    }

    // Show modal when "Reject" button is clicked
    document.getElementById("rejectButton").addEventListener("click", function () {
        modal.style.display = "block";
    });

    // Close modal when close button is clicked
    closeButton.addEventListener("click", function () {
        modal.style.display = "none";
    });

    // Submit rejection when submit button is clicked
    submitButton.addEventListener("click", function () {
        if (validateRejection()) {
            let rejectionMessage = rejectionInput.value.trim();
            window.location.href = '/LeaveRequests/RejectRequest?id=@Model.Id&rejectionMessage=' + encodeURIComponent(rejectionMessage);
            modal.style.display = "none"; // Close the modal
        }
    });

    // Close modal if the user clicks outside of it
    window.addEventListener("click", function (event) {
        if (event.target === modal) {
            modal.style.display = "none";
        }
    });

    // Close modal when ESC key is pressed
    window.addEventListener("keydown", function (event) {
        if (event.key === "Escape" && modal.style.display === "block") {
            modal.style.display = "none";
        }
    });

</script>

