@model Leave_Management.Models.LeaveRequestVm

@{
    ViewData["Title"] = "Details";
}


@if (Model.Approved == null)
{
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Pending Approval</h4>
        <p>
            <strong>@Html.DisplayNameFor(model => model.RequestingEmployeeId):</strong>  @Model.RequestingEmployee.Firstname @Model.RequestingEmployee.Lastname 's Leave Request <br />
        </p>
        <hr />
        <p>
            @Html.DisplayNameFor(model => model.DateRequested) - @Html.DisplayFor(model => model.DateRequested)
        </p>
    </div>
}
else if (Model.Approved == true)
{
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Approved by @Model.ApprovedBy.Firstname @Model.ApprovedBy.Lastname</h4>
        <p>
            <strong>@Html.DisplayNameFor(model => model.RequestingEmployeeId):</strong> @Model.RequestingEmployee.Firstname @Model.RequestingEmployee.Lastname  <br />
        </p>
        <hr />
        <p>
            @Html.DisplayNameFor(model => model.DateRequested) - @Html.DisplayFor(model => model.DateRequested)
        </p>
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Rejected by @Model.ApprovedBy.Firstname @Model.ApprovedBy.Lastname</h4>
        <p>
            <strong>@Html.DisplayNameFor(model => model.RequestingEmployeeId):</strong> @Model.RequestingEmployee.Firstname @Model.RequestingEmployee.Lastname <br />
        </p>
        <hr />
        <p>
            @Html.DisplayNameFor(model => model.DateRequested) - @Html.DisplayFor(model => model.DateRequested)
        </p>
    </div>
}
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeaveType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeaveType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestComments)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestComments)
        </dd>
    </dl>
</div>
<div>
    @if (Model.Approved == null)
    {
        <a class="btn btn-success" asp-action="ApproveRequest" asp-route-id="@Model.Id">
            <i class="fas fa-check"></i> Approve
        </a>
        <a class="btn btn-danger" id="rejectButton" data-toggle="modal" data-target="#rejectModal">
            <i class="fas fa-remove"></i> Reject
        </a>
        <!-- Modal -->
        <div class="modal fade" id="rejectModal" tabindex="-1" role="dialog" aria-labelledby="rejectModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="rejectModalLabel">Reject Request</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <label for="rejectionMessage">Rejection Reason:</label>
                        <textarea class="form-control" id="rejectionMessage" rows="3"></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <a class="btn btn-danger" asp-action="RejectRequest" asp-route-id="@Model.Id">
                            <i class="fas fa-remove"></i> Reject
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

    <a class="btn btn-outline-secondary" asp-action="Index">
        <i class="fa fa-arrow-left"></i> Back to List
    </a>
</div>

<script>
    $(document).ready(function () {
        // When the reject button is clicked, show the modal
        $('#rejectButton').click(function () {
            $('#rejectModal').modal('show');
        });

        // When the reject modal is closed, clear the rejection reason
        $('#rejectModal').on('hidden.bs.modal', function () {
            $('#rejectionMessage').val('');
        });

        // When the "Reject" button inside the modal is clicked
        $('#submitReject').click(function () {
            var rejectionMessage = $('#rejectionMessage').val(); // Get the rejection reason from the textarea


            // If the rejection reason is not empty
            if (rejectionReason.trim() !== '') {
                $('#rejectModal').modal('hide');
              
            } else {
                // If the rejection reason is empty, show an error message or handle it as needed
                alert('Please enter a rejection reason.');
            }
        });
    });
</script>
